<h1>Editing sample</h1>

<% form_for(@sample) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :artist %><br />
    <%= f.text_field :artist %>
  </p>
  <p>
    <%= f.label :start %><br />
    <%= f.text_field :start %>
  </p>
  <p>
    <%= f.label :stop %><br />
    <%= f.text_field :stop %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

